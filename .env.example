# ===========================================
# MULTI-BOT MANAGEMENT SYSTEM - HOSTING CONFIG
# ===========================================

# Application Environment
NODE_ENV=production                    # Environment mode (development/production)
# PORT is auto-assigned by hosting provider - no need to set manually

# ===========================================
# DEFAULT TEMPLATES (for creating new bots only)
# Each bot has its own config in data/bots.json
# ===========================================

# Default server template (not used for existing bots)
SERVER_HOST=your-server.aternos.me    # Default Minecraft server hostname
SERVER_PORT=19132                     # Default Minecraft server port
MC_VERSION=1.21.90                    # Minecraft Bedrock version

# Default bot template (not used for existing bots)
BOT_USERNAME=YourBotName              # Default bot username
DEFAULT_OFFLINE_MODE=true             # Enable offline mode by default
DEFAULT_ANTI_AFK_ENABLED=true         # Enable anti-AFK by default
DEFAULT_ANTI_AFK_INTERVAL=30000       # Anti-AFK movement interval (ms)
DEFAULT_MOVEMENT_RANGE=2.0            # Movement range in blocks
DEFAULT_MAX_RECONNECT_ATTEMPTS=50     # Max reconnection attempts

# Better Stack Monitoring (Optional)
BETTER_STACK_ENABLED=true             # Enable Better Stack integration
BETTER_STACK_API_KEY=your_api_key     # Better Stack API key
BETTER_STACK_HEARTBEAT=https://uptime.betterstack.com/api/v1/heartbeat/YOUR_KEY
BETTER_STACK_INTERVAL=60000           # Heartbeat interval in milliseconds

# Bot Authentication (Optional)
SKIP_AUTHENTICATION=false             # Skip Minecraft authentication

# Logging Configuration (Optional)
LOG_LEVEL=info                        # Logging level (debug/info/warn/error)
MAX_LOG_SIZE=5242880                  # Max log file size in bytes (5MB)
LOG_ROTATION_ENABLED=true             # Enable log rotation

# File Paths (Optional)
DATA_PATH=./data                      # Data directory path
LOGS_PATH=./logs                      # Logs directory path
BOT_LOGS_PATH=./logs/bots             # Bot-specific logs directory path
